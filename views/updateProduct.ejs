<% layout('/layout/boilerplate') %>
<style>
  .formContainer{
    transform: scale(0.95);
  }
</style>
    <div class=" d-flex flex-column">
      <div class="container py-5 d-flex flex-grow-1">
        <div class="col-3 d-flex flex-column">
          <div class="d-flex flex-column">
            <a class="mb-2 d-block" href="#">All Products</a>
            <a class="mb-2 d-block" href="#">Create new product</a>
          </div>
        </div>
        <main class=" formContainer col-9 bg-white p-4 shadow ">
          <h2 class="h4 fw-bold mb-4">Update the product</h2>
          <form autocomplete="off" action="/products/<%= product._id%>/update " method="post" enctype="multipart/form-data">
            <div class="mb-4">
              <h3 class="h5 fw-semibold mb-3">Product Details</h3>
              <div class="mb-3">
                <label class="form-label fw-medium">Image</label>
                <input name="image" type="file" class="form-control">
              </div>
              <div class="row g-3">
                <div class="col mb-3">
                  <input name="name" type="text" value="<%= product.name %>" class="form-control">
                </div>
                <div class="col">
                  <input name="price" type="text"  value="<%= product.price %>"   class="form-control">
                </div>
                <div class="col">
                  <input name="discount" type="text" value="<%= product.discount %>"  class="form-control">
                </div>
              </div>
              <div class="col">
                <input name="description" type="text" value="<%= product.description %>"  class="form-control">
              </div>
            </div>
    
            <div>
              <h3 class="h5 fw-semibold mb-3">Panel Details</h3>
              <div class="row g-3">
                <div class="col">
                  <input name="bgcolor" type="text" placeholder="Background Color" value="<%= product.bgcolor %>"  class="form-control">
                </div>
                <div class="col">
                  <input name="panelColor" type="text" placeholder="Panel Color" value="<%= product.panelColor %>"  class="form-control">
                </div>
                <div class="col">
                  <input name="textColor" type="text" placeholder="Text Color" value="<%= product.textColor %>"  class="form-control">
                </div>
              </div>
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Update Product">
          </form>
        </main>
      </div>
    </div>
    