<div class="container-fluid vh-100 d-flex p-4">
    <div class="col-3 d-flex flex-column h-100">
      <div class="d-flex align-items-center mb-3">
        <h3 class="me-2">Sort by</h3>
        <form action="/shop">
          <select class="form-select" name="sortby">
            <option value="popular">Popular</option>
            <option value="newest">Newest</option>
          </select>
        </form>
      </div>
      <div class="d-flex flex-column mt-4">
        <a class="d-block mb-2" href="#">New Collection</a>
        <a class="d-block mb-2" href="#">All Products</a>
        <a class="d-block mb-2" href="#">Discounted Products</a>
      </div>
      <div class="mt-auto">
        <a class="d-block mb-2" href="#">Filter by:</a>
        <a class="d-block mb-2" href="#">Availability</a>
        <a class="d-block mb-2" href="#">Discount</a>
      </div>
    </div>
    <div class="col-9 d-flex flex-column gap-3">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% products.forEach(function(product) { %>
        <div class="col">
          <div class="card">
            <div class="card-body d-flex justify-content-center align-items-center" style="background-color:' <%= product.bgcolor %>';">
              <img class="img-fluid" style="max-height: 12rem;" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center" style="background-color: '<%= product.panelcolor %>'; color:' <%= product.textcolor %>';">
              <div>
                <h3 class="card-title m-0"><%= product.name %></h3>
                <h4 class="card-subtitle m-0">â‚¹ <%= product.price %></h4>
              </div>
              <a class="btn btn-light rounded-circle" href="#">
                <i class="ri-add-line"></i>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  